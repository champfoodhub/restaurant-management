import { Text, type TextProps } from 'react-native';

import { useThemeColor } from '@/hooks/use-theme-color';
import { componentStyles } from '@/styles';

export type ThemedTextProps = TextProps & {
  lightColor?: string;
  darkColor?: string;
  type?: 'default' | 'title' | 'defaultSemiBold' | 'subtitle' | 'link';
};

export function ThemedText({
  style,
  lightColor,
  darkColor,
  type = 'default',
  ...rest
}: ThemedTextProps) {
  const color = useThemeColor({ light: lightColor, dark: darkColor }, 'text');

  return (
    <Text
      style={[
        { color },
        type === 'default' ? componentStyles.themedText.default : undefined,
        type === 'title' ? componentStyles.themedText.title : undefined,
        type === 'defaultSemiBold' ? componentStyles.themedText.defaultSemiBold : undefined,
        type === 'subtitle' ? componentStyles.themedText.subtitle : undefined,
        type === 'link' ? componentStyles.themedText.link : undefined,
        style,
      ]}
      {...rest}
    />
  );
}
